<h3>Add Story</h3>
<div class="row">
  <form action="/stories" method="POST" class="col s12">

    <!-- Title -->
    <div class="row">
      <div class="input-field">
        <input type="text" id="title" name="title" required />
        <label for="title">Title</label>
      </div>
    </div>

    <!-- Status -->
    <div class="row">
      <div class="input-field">
        <select id="status" name="status">
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <!-- Story Body -->
    <div class="row">
      <div class="input-field">
        <h5>Tell Us Your Story</h5>
        <!-- âœ… CKEditor attaches here -->
        <textarea id="body" name="body" placeholder="Write your story..."></textarea>
      </div>
    </div>

    <!-- Buttons -->
    <div class="row">
      <button type="submit" class="btn">Save</button>
      <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
    
  </form>
</div>
